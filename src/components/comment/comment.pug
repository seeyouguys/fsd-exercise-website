include ../../components/like-btn/like-btn

mixin comment({ username= 'Unknown', userpic, text, date, likesNumber, isLiked, mix=''} = {})
    .comment(class=mix)
        .comment__userpic
            if !(userpic)
                .comment__userpic-char= username[0]
        .comment__user-info
            .comment__username= username
            .comment__date= date
        .comment__like-btn
            +like-btn({ likesNumber, isClicked: isLiked })
        p.comment__text= text
            